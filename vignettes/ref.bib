@ARTICLE{Stouffer2023-td,
  title    = "A Universal Method for Crossing Molecular and Atlas Modalities
              using {Simplex-Based} Image Varifolds and Quadratic Programming",
  author   = "Stouffer, Kaitlin M and Trouv, Alain and Younes, Laurent and
              Kunst, Michael and Ng, Lydia and Zeng, Hongkui and Anant, Manjari
              and Fan, Jean and Kim, Yongsoo and Miller, Michael I",
  abstract = "This paper explicates a solution to the problem of building
              correspondences between molecular-scale transcriptomics and
              tissue-scale atlases. The central model represents spatial
              transcriptomics as generalized functions encoding molecular
              position and high-dimensional transcriptomic-based (gene, cell
