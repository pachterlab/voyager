}

@UNPUBLISHED{Bienroth2023-fx,
  title    = "Spatially Resolved Transcriptomics Mining in {3D} and Virtual
              Reality Environments with {VR-Omics}",
  author   = "Bienroth, Denis and Charitakis, Natalie and Jaeger-Honz, Sabrina
