@UNPUBLISHED{Zhang2023-mm,
  title    = "Spatially aware self-representation learning for tissue structure
              characterization and spatial functional genes identification",
  author   = "Zhang, Chuanchao and Li, Xinxing and Huang, Wendong and Wang,
              Lequn and Shi, Qianqian",
  abstract = "Spatially resolved transcriptomics (SRT) enable the comprehensive
              characterization of transcriptomic profiles in the context of
              tissue microenvironments. Unveiling spatial transcriptional
              heterogeneity needs to effectively incorporate spatial information
              accounting for the substantial spatial correlation of expression
              measurements. Here, we develop a computational method, SpaSRL
