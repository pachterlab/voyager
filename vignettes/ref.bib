@UNPUBLISHED{Pechuan-Jorge2022-jb,
  title    = "{SPEX}: A modular end-to-end analytics tool for spatially resolved
              omics of tissues",
  author   = "Pechuan-Jorge, Ximo and Li, Xiao and Risom, Tyler and Zubkov,
